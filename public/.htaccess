# Set correct MIME type for manifest.json (required for PWA)
<IfModule mod_mime.c>
    AddType application/manifest+json .json
    AddType application/json .json
</IfModule>

# Ensure manifest.json is served with correct headers
<FilesMatch "manifest\.json$">
    Header set Content-Type "application/manifest+json; charset=utf-8"
</FilesMatch>

# Cache control for PWA assets (optional but recommended)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType application/manifest+json "access plus 1 week"
    ExpiresByType image/png "access plus 1 month"
</IfModule>
